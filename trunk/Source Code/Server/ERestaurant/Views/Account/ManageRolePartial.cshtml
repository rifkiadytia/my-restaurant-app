
@{
    
    
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
    
    var grid = Html.DevExpress().GridView(
        grSettings =>
        {
            grSettings.Name = "gridView";
            grSettings.grSettingsPager.Position = PagerPosition.TopAndBottom;
            grSettings.grSettingsPager.FirstPageButton.Visible = true;
            grSettings.grSettingsPager.LastPageButton.Visible = true;
            grSettings.grSettingsPager.PageSizeItemgrSettings.Visible = true;
            grSettings.CallbackRouteValues = new { Controller = "Account", Action = "ManageRolePartial" };
            grSettings.CustomBindingRouteValuesCollection.Add(
                GridViewOperationType.Paging,
                new { Controller = "Account", Action = "AdvancedCustomBindingPagingRoleAction" }
            );
            grSettings.CustomBindingRouteValuesCollection.Add(
                GridViewOperationType.Filtering,
                new { Controller = "Account", Action = "AdvancedCustomBindingFilteringRoleAction" }
            );
            grSettings.CustomBindingRouteValuesCollection.Add(
                GridViewOperationType.Sorting,
                new { Controller = "Account", Action = "AdvancedCustomBindingSortingRoleAction" }
            );
            grSettings.CustomBindingRouteValuesCollection.Add(
                GridViewOperationType.Grouping,
                new { Controller = "Account", Action = "AdvancedCustomBindingGroupingRoleAction" }
            );

            grSettings.KeyFieldName = "RoleID";
            grSettings.grSettingsEditing.AddNewRowRouteValues = new { Controller = "Account", Action = "RoleAddNewPartial" };
            grSettings.grSettingsEditing.DeleteRowRouteValues = new { Controller = "Account", Action = "RoleDeletePartial" };
            grSettings.grSettingsEditing.UpdateRowRouteValues = new { Controller = "Account", Action = "RoleUpdatePartial" };
            grSettings.grSettingsEditing.Mode = ERestaurant.Controllers.GridViewEditingDemosHelper.EditMode;
            grSettings.grSettingsBehavior.ConfirmDelete = true;
            grSettings.CommandColumn.Visible = true;
            grSettings.CommandColumn.Width = Unit.Percentage(10);
            grSettings.CommandColumn.ShowNewButtonInHeader = true;
            grSettings.CommandColumn.ShowDeleteButton = true;
            grSettings.CommandColumn.ShowEditButton = true;
            grSettings.grSettings.ShowFilterRow = true;
            grSettings.grSettings.ShowGroupPanel = true;
            grSettings.grSettings.ShowFilterBar = GridViewStatusBarMode.Visible;
            grSettings.grSettings.ShowFooter = true;
            grSettings.grSettingsBehavior.AllowFocusedRow = true;
            grSettings.Width = Unit.Percentage(100);
            grSettings.Columns.Add("RoleName").Width = Unit.Percentage(40);
            grSettings.Columns.Add("RoleDescription").Width = Unit.Percentage(60);
            
        });
    if (ViewBag.ErrMessage != null)
    {
        grid.SetEditErrorText((string)ViewBag.ErrMessage);
    }
   
}
@grid.BindToCustomData(Model).GetHtml()


