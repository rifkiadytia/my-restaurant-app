    @* DXCOMMENT: Configure GridView *@
    @Html.DevExpress().GridView(
    grSettings =>
    {
        grSettings.Name = "GridView";
        grSettings.CallbackRouteValues = new { Controller = "Home", Action = "GridViewPartialView" };

        grSettings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
        grSettings.grSettingsPager.Visible = false;
        grSettings.grSettingsPager.PageSize = 30;
        grSettings.grSettings.VerticalScrollBarMode = ScrollBarMode.Visible;
        grSettings.grSettings.VerticalScrollableHeight = 350;
        grSettings.grSettings.VerticalScrollBarStyle = GridViewVerticalScrollBarStyle.Virtual;
        grSettings.ControlStyle.Paddings.Padding = System.Web.UI.WebControls.Unit.Pixel(0);
        grSettings.ControlStyle.Border.BorderWidth = System.Web.UI.WebControls.Unit.Pixel(0);
        grSettings.ControlStyle.BorderBottom.BorderWidth = System.Web.UI.WebControls.Unit.Pixel(1);
        
        // DXCOMMENT: Configure grid's columns in accordance with data model fields
        grSettings.Columns.Add("ContactName");
        grSettings.Columns.Add("CompanyName");
        grSettings.Columns.Add("ContactTitle");
        grSettings.Columns.Add("City");
        grSettings.Columns.Add("Phone");
    }).Bind(Model).GetHtml()
