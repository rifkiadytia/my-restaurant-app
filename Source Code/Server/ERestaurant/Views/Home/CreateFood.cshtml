@model ERestaurant.Models.FoodMaster
@using ERestaurant.Util;
@{
    ViewBag.Title = "CreateFood";
}

<h2>CreateFood</h2>

@using (Html.BeginForm("CreateFood", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

         <div class="line">
        @Html.DevExpress().LabelFor(model => model.FoodName, CommonDemoHelper.LabelgrSettingsMethod).GetHtml()
        @Html.DevExpress().TextBoxFor(model => model.FoodName, CommonDemoHelper.TextBoxgrSettingsMethod).GetHtml()
    </div>

       <div class="line">
        @Html.DevExpress().LabelFor(model => model.FoodDescription, CommonDemoHelper.LabelgrSettingsMethod).GetHtml()
        @Html.DevExpress().TextBoxFor(model => model.FoodDescription, CommonDemoHelper.TextBoxgrSettingsMethod).GetHtml()
    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price)
                @Html.ValidationMessageFor(model => model.Price)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Image, new { @type="file"})
                @Html.ValidationMessageFor(model => model.Image)
            </div>
        </div>
         <div class="line">
        @Html.DevExpress().LabelFor(model => model.FoodCatID, CommonDemoHelper.LabelgrSettingsMethod).GetHtml()
        @Html.DevExpress().ComboBoxFor(
        model => model.FoodCatID,
        grSettings =>
        {
            grSettings.Name = "FoodCatID";
            grSettings.Width = Unit.Pixel(250);
            grSettings.ShowModelErrors = true;
            grSettings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
            grSettings.Properties.DropDownStyle = DropDownStyle.DropDown;
            grSettings.ControlStyle.CssClass = "editor";
            grSettings.Properties.TextField = "FoodCatName";
            grSettings.Properties.ValueField = "FoodCatID";
            grSettings.Properties.ValidationgrSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithText;
        }
    ).BindList(ViewBag.FoodCategory).GetHtml()
    </div>
      
        <div class="form-group">
            @Html.LabelFor(model => model.FinishingTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FinishingTime)
                @Html.ValidationMessageFor(model => model.FinishingTime)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Food")
</div>
