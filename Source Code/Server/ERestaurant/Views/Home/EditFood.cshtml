    @Html.HiddenFor(model => model.Image);
    <div id="edit-basic" class="tab-pane active">
            <h4 class="header blue bolder smaller">General</h4>

            <div class="row-fluid">
                <div class="span4">
                    <div class="ace-file-input ace-file-multiple">
