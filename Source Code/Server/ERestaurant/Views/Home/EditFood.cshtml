        <div class="control-group">
                        <label class="control-label" for="FoodName">Food Name</label>

                        <div class="controls">
                            @Html.TextBoxFor(model => model.FoodName)
                        </div>
                    </div>
            <div class="control-group">
                <label class="control-label" for="DOB">Price</label>

                <div class="controls">
                    <div class="input-append">
                        @Html.TextBoxFor(model => model.Price)
                    </div>
                </div>
            </div>

           

            <div class="control-group">
                <label class="control-label" for="Address">FoodDescription</label>

                <div class="controls">
                    @Html.TextAreaFor(model => model.FoodDescription)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="FinishingTime">FinishingTime</label>

                <div class="controls">
                        @Html.TextBoxFor(model => model.FinishingTime)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="Position">FoodCatID</label>

                <div class="controls">
                  
            @Html.DevExpress().ComboBoxFor(
        model => model.FoodCatID,
        grSettings =>
        {
            grSettings.Name = "FoodCatID";
            grSettings.Width = Unit.Pixel(250);
            grSettings.ShowModelErrors = true;
            grSettings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
            grSettings.Properties.DropDownStyle = DropDownStyle.DropDown;
            grSettings.ControlStyle.CssClass = "editor";
            grSettings.Properties.TextField = "FoodCatName";
            grSettings.Properties.ValueField = "FoodCatID";
            grSettings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithText;
        }
    ).BindList(ViewBag.FoodCategory).GetHtml()
                </div>
            </div>


            <div class="space"></div>
           
            
            
        </div>
    
       <div class="form-actions">

