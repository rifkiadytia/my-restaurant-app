@model MVCInBuiltFeatures.Models.LoginViewModel
@{
    ViewBag.Title = "Sign in";
    Layout = "~/Views/Shared/_AdminLoginPartial.cshtml";
}
<script type="text/javascript">
    jQuery(document).ready(function(){
        jQuery('#loginForm').submit(function () {
            var userName = jQuery('#UserName').val();
            var password = jQuery('#Password').val();
            if (userName == '' && password == '') {
                jQuery('.login-alert').fadeIn();
                return false;
            }
        });
    });
</script>
<div class="loginpanelinner">
    <div class="logo animate0 bounceIn"><img src="@Url.Content("~/Content/cpanel/images/logo.png")" alt="" /></div>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "loginForm" ,role="form" }))
    {
        @Html.AntiForgeryToken()
            <div class="inputwrapper login-alert">
                <div class="alert alert-error">Invalid username or password</div>
            </div>
            <div class="inputwrapper animate1 bounceIn">
                @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Enter any username" })
            </div>
            <div class="inputwrapper animate2 bounceIn">
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Enter any password" })
            </div>
            <div class="inputwrapper animate3 bounceIn">
                <button name="submit">Sign In</button>
            </div>
            <div class="inputwrapper animate4 bounceIn">
             <label>
                 @Html.CheckBoxFor(m => m.RememberMe, new { @class = "remember" }) 
                 Keep me sign in
             </label> 
            </div>
    }
</div><!--loginpanelinner-->
