@model IEnumerable<MVCInBuiltFeatures.Models.ApplicationUser>

@{
    ViewBag.Title = "GetAllUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAllUser</h2>

<p>
    @Html.ActionLink("Create New", "Register")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>

        <td>
            <img src="@Url.Content("~/Uploads/UserImage/"+item.Image)" width="240" />
        </td>
        <td>

            @Html.ActionLink("Edit", "EditUser", new {  id=item.Id }) |
            <!--@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |-->
            @Html.ActionLink("Delete", "DeleteUser", new {  id=item.Id, @class = "button",
                                                            style = "text-transform:capitalize",
                                                            title = "Delete Album",
                                                            onclick = "return confirm('Are you want delete this User ?')"})
        </td>
    </tr>
}

</table>
